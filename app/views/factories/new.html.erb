
<h1>New Factory</h1>

<%= form_for([@manufacturer, @factory]) do |f| %>
  <%= f.label :city %>
  <%= f.text_field :city %>
<br>
  <%= f.label :state %>
  <%= f.text_field :state %>
<br>
  <%= f.label :unionized, "Yes" %>
  <%= f.radio_button :unionized, true %>
<br>
  <%= f.label :unionized, "No" %>
  <%= f.radio_button :unionized, false %>
<br>
  <%= f.button "Create New Factory" %>
<% end %>